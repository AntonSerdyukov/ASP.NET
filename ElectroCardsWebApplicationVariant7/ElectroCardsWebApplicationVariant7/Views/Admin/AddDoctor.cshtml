
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddDoctor</title>
</head>
<body>
    <div>
        <h3>Форма ввода данных о докторе</h3>
        <form method="post" action="">

            <table>
                <tr>
                    <td><p>Введите имя доктора</p></td>
                    <td><input type="text" name="Name" /> </td>
                </tr>
                <tr>
                    <td><p>Введите фамилию доктора:</p></td>
                    <td>
                        <input type="text" name="Surname" />
                    </td>
                </tr>
                <tr>
                    <td><p>Введите отчество доктора </p></td>
                    <td><input type="text" name="Patronymic" /> </td>
                </tr>
                <tr>
                    <td><p>Введите должность доктора:</p></td>
                    <td>
                        <input type="text" name="Position" />
                    </td>
                </tr>
                <tr>
                    <td><p>Введите телефон доктора:</p></td>
                    <td>
                        <input type="text" name="Telephone" />
                    </td>
                </tr>
                
                <tr><td><input type="submit" value="Отправить" /> </td><td></td></tr>

            </table>
        </form>
    </div>
</body>
</html>
